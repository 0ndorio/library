{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "outDir": "./esm5/",
        "alwaysStrict": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": "test",
        "paths": {
            "@zxing/library/*": ["../src/*"]
        }
    },
    "include": [
        "test/**/*.ts",
        "src/**/*.ts"
    ]
}
