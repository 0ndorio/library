{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "outDir": "./esm5/",
        "alwaysStrict": true,
        "noImplicitAny": false,
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/test",
        "**/*.spec.ts"
    ]
}
