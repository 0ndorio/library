{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": ["es5", "es6", "dom"],
        "outDir": "./lib/",
        "suppressImplicitAnyIndexErrors": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
